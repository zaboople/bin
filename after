find=""
include=0
while [[ $1 != "" ]]; do
  if [[ $1 == -h* ]]; then
    echo "Usage: after [-include] regex "
    exit 0
  elif [[ $1 == -i* ]]; then
    include=1
    shift
  elif [[ $find == "" ]]; then
    find=$1
    shift
  else
    echo "Unexpected: "$1
    exit 1
  fi
done



gawk '
  BEGIN {
    found=0
    include='$include'
  }
  {
    if (found)
      print $0
    else {
      found=match($0, "'$find'")
      if (found && include)
        print $0
    }
  }
'
