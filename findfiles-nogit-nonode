function blergh() {
  find . -name node_modules -type d -prune -o \
         -name build -type d -prune -o \
         -name dist -type d -prune -o \
         -name .git -type d -prune -o \
         -type f "$@" -print
}

if [[ $1 == "-print0" || $1 == "-0" || $1 == "--null" ]]; then
  shift
  blergh "$@" | null-delimit
else
  blergh "$@"
fi

